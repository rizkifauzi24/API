@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutLatihan";
}
    <div class="container mt-5 pt-3">
        @*<div class="text-center">
            <h1 class="display-4">Welcome</h1>
            <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

            <ul>
                <li class="text-left" id="listPoke"></li>
            </ul>
        </div>*@

        <table class="table table-striped mt-5 mb-5 table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>NO</th>
                    <th>Name</th>
                    <th>Url</th>
                </tr>
            </thead>
            <tbody id="tablePoke">
            </tbody>



        </table>

        <!-- Button trigger modal -->
        

        <!-- Modal -->
        <div class="modal fade" id="modalDetail" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog ">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title namePoke" id="exampleModalLabel" style="text-transform: capitalize;">Modal Pokemon</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-12 text-center">

                                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                                        <li class="nav-item" role="presentation">
                                            <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Default</a>
                                        </li>
                                        <li class="nav-item" role="presentation">
                                            <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Shiny</a>
                                        </li>
                                    </ul>
                                    <div class="tab-content" id="myTabContent">
                                        <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                                            <img src="" id="imgPoke2" width="200" height="200" alt="" />
                                            <h2 class="namePoke" style="text-transform: capitalize;">
                                            </h2>
                                        </div>
                                        <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                                            <img src="" id="imgPoke3" width="200" height="200" alt="" />
                                            <h2 class="namePoke" style="text-transform: capitalize;">
                                            </h2>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-2 mb-2">
                                <div class="col-sm-12 text-center" id="types">
                                </div>
                            </div>
                            <div class="row mt-4 mb-2">
                                <div class="col-sm-4 text-center">
                                    <button type="button" class="btn btn-info btn-lg">
                                        Height <span class="badge badge-light" id="height">4</span>
                                    </button>
                                </div>
                                <div class="col-sm-4 text-center">
                                    <button type="button" class="btn btn-warning btn-lg">
                                        Weight <span class="badge badge-light" id="weight">4</span>
                                    </button>
                                </div>
                                <div class="col-sm-4 text-center">
                                    <button type="button" class="btn btn-success btn-lg">
                                        Order <span class="badge badge-light" id="order">4</span>
                                    </button>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 text-left">
                                    <h6>Hp</h6>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-striped bg-info" id="hp" role="progressbar" aria-valuemin="20" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-sm-12 text-left">
                                    <h6>Attack</h6>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-striped bg-info" id="attack" role="progressbar" aria-valuemin="20" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-sm-12 text-left">
                                    <h6>Defense</h6>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-striped bg-info" id="defense" role="progressbar" aria-valuemin="20" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-sm-12 text-left">
                                    <h6>Special Attack</h6>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-striped bg-info" id="special-attack" role="progressbar" aria-valuemin="20" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-sm-12 text-left">
                                    <h6>Special Defense</h6>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-striped bg-info" id="special-defense" role="progressbar" aria-valuemin="20" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-sm-12 text-left">
                                    <h6>Speed</h6>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-striped bg-info" id="speed" role="progressbar" aria-valuemin="20" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>

                        </div>
                       
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger btn-lg" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>





